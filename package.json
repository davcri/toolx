{
    "name": "@toolx/core",
    "author": "William Manco <wmanco88@gmail.com>",
    "type": "module",
    "engines": {
        "npm": ">=8.3.1",
        "node": ">=18.0.0"
    },
    "scripts": {
        "create": "node ./scripts/create.js",
        "version": "node ./scripts/version.js",
        "types": "node ./scripts/types.js && npx -p typescript tsc packages/**/*.js --declaration --allowJs --emitDeclarationOnly",
        "publish": "npm publish --workspaces",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "workspaces": [
        "packages/core",
        "packages/tool-json",
        "packages/tool-svg",
        "packages/tool-sharp",
        "packages/tool-combine",
        "packages/tool-remove"
    ],
    "devDependencies": {
        "@types/node": "^18.11.9",
        "eslint": "^8.30.0",
        "mustargs": "^1.0.4",
        "vitest": "^1.0.4"
    }
}
